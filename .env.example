# Environment Variables - ReplyLink

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/replylink"

# Redis
REDIS_URL="redis://localhost:6379"

# NextAuth/JWT
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET="your-jwt-secret-key-change-this"

# Encryption Key (for storing social media tokens)
ENCRYPTION_KEY="your-32-character-encryption-key-here"



# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_WEBHOOK_ID=
PAYPAL_WEBHOOK_SECRET= (optional for development)

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Razorpay (Alternative to Stripe)
RAZORPAY_KEY_ID=""
RAZORPAY_KEY_SECRET=""
RAZORPAY_WEBHOOK_SECRET=""

# Meta/Facebook/Instagram
META_APP_ID="your-meta-app-id"
META_APP_SECRET="your-meta-app-secret"
META_WEBHOOK_VERIFY_TOKEN="your-webhook-verify-token"

# WhatsApp Cloud API
WHATSAPP_PHONE_NUMBER_ID=""
WHATSAPP_BUSINESS_ACCOUNT_ID=""
WHATSAPP_ACCESS_TOKEN=""

# Pusher (for real-time features)
NEXT_PUBLIC_PUSHER_APP_KEY="your-pusher-key"
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_SECRET="your-pusher-secret"
PUSHER_CLUSTER="us2"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Email (Optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@replylink.io"

# Admin Panel
ADMIN_EMAIL="admin@replylink.io"

# Feature Flags
ENABLE_REGISTRATION="true"
ENABLE_WHATSAPP="true"
ENABLE_ANALYTICS="true"
